<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" >
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group" >
    <%= f.label :product_sku %><br>
    <%= f.text_field :product_sku, disabled: true, value: @product_sku, class: "form-control"%>
  </div>
  <div class="form-group" >
    <%= f.label :price %><br>
    <%= f.number_field :price, class: "form-control"%>
  </div>
  <div class="form-group" >
    <%= f.label :item_count %><br>
    <%= f.number_field :item_count, class: "form-control"%>
  </div>
  <div class="form-group" >
    <%= f.label :low_item_threshold %><br>
    <%= f.number_field :low_item_threshold, class: "form-control"%>
  </div>
  <div class="form-group" >
    <%= f.submit %>
  </div>
<% end %>
